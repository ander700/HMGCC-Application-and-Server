<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/testImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="178dp"
        android:layout_height="107dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testImageView">

        <ImageView
            android:id="@+id/contactsBut"
            android:layout_width="90dp"
            android:layout_height="90dp"

            app:srcCompat="@drawable/ic_person_black_24dp"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="355dp" />

        <ImageView
            android:id="@+id/smsBut"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="smsStart"
            app:srcCompat="@drawable/ic_sms_black_24dp"
            tools:layout_editor_absoluteX="181dp"
            tools:layout_editor_absoluteY="375dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="171dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
        app:layout_constraintVertical_bias="0.068">

        <ImageView
            android:id="@+id/textEncrypt"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="encryptStart"
            app:srcCompat="@drawable/ic_enhanced_encryption_black_24dp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="470dp" />

        <ImageView
            android:id="@+id/imageEncrypt"
            android:layout_width="93dp"
            android:layout_height="90dp"
            android:onClick="imageStart"
            app:srcCompat="@drawable/ic_image_black_24dp"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="470dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>